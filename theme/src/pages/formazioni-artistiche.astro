---
import Layout from '../layouts/Page.astro';
import ImageSection from '../components/sections/heros/ImageSection.astro';
import { TextSection } from '@littlesticks/odyssey-theme-components';

const seo = {
	title: 'Formazioni Artistiche | Formazioni Artistiche con Gionanna Santoro',
	description:
		'Le Formazioni Artistiche e le Collaborazioni di Giovanna Santoro "Pianista"',
};
---

<Layout {seo}>
	<TextSection narrow>
		<h1 class="textCenter">Formazioni Artistiche di Giovanna Santoro</h1>
	</TextSection>

	<TextSection narrow>
		<h3 class="styleText">Quartetto Crom4tiche</h3>
	</TextSection>

	<ImageSection>
		<picture slot="image-container-1">
			<!-- <h3>Quartetto Crom4tiche</h3> -->
			<img
				class="fade-in-image"
				src="/assets/images/home/Giovanna-Santoro.jpg"
				alt="Giovanna-Santoro"
				id="home-hero-image"
			/>
			<p>Giovanna Santoro (Pianista)</p>
		</picture>
		<picture slot="image-container-2">
			<img
				class="fade-in-image marginPhoto"
				src="/assets/images/home/Lorena-Sarra.jpeg"
				alt="Lorena-Sarra"
				id="home-hero-image"
			/>
			<p>Lorena Sarra (Cantante Lirica Soprano)</p>
		</picture>
	</ImageSection>

	<TextSection />

	<ImageSection>
		<picture slot="image-container-1">
			<!-- <h3>Quartetto Crom4tiche</h3> -->
			<img
				class="fade-in-image"
				src="/assets/images/home/Ramona-Veneri.jpg"
				alt="Ramona-Veneri"
				id="home-hero-image"
			/>
			<p>Ramona Veneri (Cantante Lirica Soprano)</p>
		</picture>
		<picture slot="image-container-2">
			<img
				class="fade-in-image marginPhoto"
				src="/assets/images/home/Rezarta-Dyrmyshi.png"
				alt="Rezarta-Dyrmyshi"
				id="home-hero-image"
			/>
			<p>Rezarta-Dyrmyshi (Cantante Lirica Soprano)</p>
		</picture>
	</ImageSection>
	<TextSection narrow>
		<h3 class="styleText">EndlessRoad</h3>
		<p>---------AGGIUNGERE LE FOTO---------</p>
	</TextSection>
	<TextSection />
</Layout>

<style>
	.textCenter {
		text-align: center;
	}
	.styleText {
		margin-top: 100px;
	}
	.marginPhoto {
		margin-top: 20px;
	}
</style>
